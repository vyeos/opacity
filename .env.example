# ============================================
# Required (minimum to run core pipeline)
# ============================================
NODE_ENV=development
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
RSS_FEEDS=https://openai.com/news/rss.xml,https://hnrss.org/frontpage
YOUTUBE_CHANNEL_IDS=
SQLITE_DB_PATH=./data/opacity.db

# ============================================
# Recommended Optional (worker behavior)
# ============================================
RUN_CONTINUOUS=false
RUN_INTERVAL_MINUTES=15
RSS_MAX_ITEMS=5
YOUTUBE_MAX_ITEMS=3
PRIORITY_THRESHOLD=80
HOURLY_THRESHOLD=50

# ============================================
# Telegram Optional
# ============================================
TELEGRAM_WEBHOOK_PORT=8787
TELEGRAM_WEBHOOK_SECRET=

# ============================================
# AI Optional (enable only if you want AI analysis)
# ============================================
ENABLE_AI_ANALYSIS=false
AI_API_KEY=
AI_API_BASE=https://generativelanguage.googleapis.com/v1beta/openai
AI_MODEL=gemini-2.0-flash

# ============================================
# X Optional (enable only if you want X collection)
# ============================================
ENABLE_X_COLLECTION=false
X_BEARER_TOKEN=
X_FOLLOWED_USERNAMES=
X_MAX_ITEMS=5
