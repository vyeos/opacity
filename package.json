{
  "name": "opacity",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "description": "Real-time signal inbox for creator/developer intelligence.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "dev:webhook": "tsx src/telegram-webhook.ts",
    "menubar": "pnpm menubar:dev",
    "menubar:dev": "electron apps/menubar/main.js",
    "menubar:pack": "electron-builder --config electron-builder.menubar.yml --dir",
    "menubar:dist": "electron-builder --config electron-builder.menubar.yml --mac dmg zip"
  },
  "keywords": [
    "news",
    "notifier",
    "youtube",
    "twitter",
    "ai"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "pg": "^8.13.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
